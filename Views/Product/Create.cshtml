@model Product

@{
    ViewBag.Title = "Create Product";
    Layout = "_Layout";
}

<h2>Заполните форму для добавления продукта</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label for="Name">Наименование</label>
                    <input asp-for="Name" class="form-control" placeholder="Введите наименование">
                </div>
                <div class="form-group">
                    <label for="Price">Цена</label>
                    <input asp-for="Price" class="form-control" placeholder="Введите цену">
                </div>
                <div class="form-group">
                    <label for="Description">Описание (По желанию)</label>
                    <input asp-for="Description" class="form-control" placeholder="Введите описание">
                </div>
                <div class="form-group">
                    <label for="Avatar">Изображение</label>
                    <input asp-for="Avatar" class="form-control" placeholder="Введите ссылку на изображение">
                </div>
                <div class="form-group">
                    <label for="CategoryId">Категория</label>
                    <select asp-for="CategoryId" class="form-control">
                        <option value="">-- Выберите категорию --</option>
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.Id">@category.NameOfCategory</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label for="BrandId">Бренд</label>
                    <select asp-for="BrandId" class="form-control">
                        <option value="">-- Выберите бренд --</option>
                        @foreach (var brand in ViewBag.Brands)
                        {
                            <option value="@brand.Id">@brand.NameOfBrand</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-2">Создать</button>
            </form>
        </div>
    </div>
</div>
